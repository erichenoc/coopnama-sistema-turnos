# Supabase (Required)
NEXT_PUBLIC_SUPABASE_URL=your_supabase_url
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key
SUPABASE_SERVICE_ROLE_KEY=your_service_role_key

# AI (Optional - enables AI features)
ANTHROPIC_API_KEY=your_anthropic_api_key

# Inworld TTS (Optional - enables voice announcements)
# Get keys from https://platform.inworld.ai
INWORLD_TTS_READ_KEY=your_base64_read_key
INWORLD_TTS_WRITE_KEY=your_base64_write_key
INWORLD_TTS_MODEL=inworld-tts-1.5-max
INWORLD_TTS_VOICE_ID=

# Web Push (Optional - enables browser push notifications)
# Generate VAPID keys: npx web-push generate-vapid-keys
NEXT_PUBLIC_VAPID_PUBLIC_KEY=
VAPID_PRIVATE_KEY=
VAPID_SUBJECT=mailto:admin@coopnama.do

# Twilio SMS (Optional - enables SMS notifications)
TWILIO_ACCOUNT_SID=
TWILIO_AUTH_TOKEN=
TWILIO_PHONE_NUMBER=

# n8n WhatsApp (Optional - enables WhatsApp via n8n)
N8N_WHATSAPP_WEBHOOK_URL=
N8N_WEBHOOK_SECRET=

# Email (Optional - enables email notifications via Resend)
# Get API key from https://resend.com
RESEND_API_KEY=
FROM_EMAIL=COOPNAMA Turnos <turnos@coopnama.com>

# App Config
NEXT_PUBLIC_APP_URL=http://localhost:3000
NEXT_PUBLIC_APP_NAME=COOPNAMA Turnos
